{% extends 'base.html.twig' %}

{% block title %}HomePage{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            {% for post in posts %}
                <div class="col-md-4">
                    <div class="card">
                        <img src="https://placeimg.com/380/230/tech" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{post.titre}}</h5>
                            <p class="card-text">{{post.content}}</p>
                            <p>{{post.publishedAt |date("d/m/Y")}}</p>
                            <a href="/posts/{{post.id}}" class="btn btn-primary">Lire article</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}