
{% extends 'base.html.twig' %}

{% block title %}{{post.titre}}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-primary" href="/blog">Retour</a>
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="...">

                <h1>{{post.titre}}</h1>
                <p class="card-text">{{post.content}}</p>
                <p>
                    {{post.publishedAt |date("d/m/Y")}}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                {{ form(form) }}
            </div>
            <div class="col-md-9">
                {% for comment in post.comments %}
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ comment.author }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ comment.createdAt | date("d/d/Y") }}</h6>
                            <p class="card-text">{{ comment.content }}</p>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </div>
    </div>{% endblock %}

